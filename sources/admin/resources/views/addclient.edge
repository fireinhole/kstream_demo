<html>
    <header>
      <title>Admin</title>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="stylesheet" href="/uikit/css/uikit.min.css" />
      <script src="/uikit/js/uikit.min.js"></script>
      <script src="/uikit/js/uikit-icons.min.js"></script>
  </header>
  <body>
        <div class="uk-child-width-expand@s" uk-grid>
            <div></div>
            <div class="uk-card uk-card-default uk-card-body">
                    <form class="uk-grid-small" uk-grid action="/clients/" method="POST">
                            <input type="text" hidden name="id" value="{{client.id}}" />
                            @if(client.isNew == false) 
                                <legend class="uk-legend">{{client.first_name}} {{client.last_name}}</legend>
                            @else
                                <legend class="uk-legend">Add New Client</legend>
                            @endif
                            <div class="uk-width-1-2@s">
                                <input class="uk-input" type="text" placeholder="First name" name="first_name" value="{{client.first_name}}" />
                            </div>
                            <div class="uk-width-1-2@s">
                                <input class="uk-input" type="text" placeholder="Last name" name="last_name" value="{{client.last_name}}"/>
                            </div>
                            <div class="uk-width-1-4@s">
                                <input class="uk-input" type="number" placeholder="Age" name="age" value="{{client.age}}"/>
                            </div>
                            <div class="uk-width-1-4@s">
                                <div class="uk-form-controls">
                                    <select class="uk-select" id="form-horizontal-select" name="gender" >
                                        @if(client.gender=='M') 
                                            <option value="M" selected>Male</option>      
                                        @else
                                            <option value="M">Male</option>      
                                        @endif
                                        @if(client.gender=='F') 
                                            <option value="F" selected>Female</option>
                                        @else
                                            <option value="F">Female</option>
                                        @endif
                                        @if(client.gender=='O') 
                                            <option value="O" selected>Other</option>
                                        @else
                                            <option value="O">Other</option>
                                        @endif
                                    </select>
                                </div>
                            </div>
                            <div class="uk-width-1-2@s">
                            </div>
                            <div class="uk-width-1-1@s">
                                <hr class="uk-divider-icon">
                            </div>
                            <div class="uk-width-1-2@s">
                                <input class="uk-input" type="submit"/>
                            </div>
                            <div class="uk-width-1-2@s">
                                @if(client.isNew) 
                                    <a class="uk-button uk-button-danger uk-width-1-1" onclick="window.open('/', '_self')">Cancel</a>
                                @else
                                    <a class="uk-button uk-button-danger uk-width-1-1" onclick="window.open('/views/{{client.id}}', '_self')">Cancel</a>
                                @endif
                            </div>
                    </form>
                </div>
            <div></div>
        </div>
    
  </body>
</html>